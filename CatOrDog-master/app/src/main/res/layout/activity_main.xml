<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtNagraj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nagraj dźwięk" />

        <ImageButton
            android:id="@+id/imgBtnRecord"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            app:srcCompat="@android:drawable/presence_audio_online" />

        <TextView
            android:id="@+id/txtLub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lub" />

        <Button
            android:id="@+id/btnReadFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wgraj plik" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtInstukcja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tu będzie instrukcja postępowania" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>